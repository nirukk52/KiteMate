# KiteMate Backend Environment Variables
# Copy this file to .env and fill in the actual values
# DO NOT commit .env to version control

# ============================================
# Zerodha Integration
# ============================================
# Get these from https://kite.zerodha.com/
ZERODHA_API_KEY=your_zerodha_api_key_here
ZERODHA_API_SECRET=your_zerodha_api_secret_here

# ============================================
# LLM Integration (OpenAI)
# ============================================
# Get API key from https://platform.openai.com/api-keys
LLM_API_KEY=sk-your_openai_api_key_here
LLM_MODEL=gpt-4o

# ============================================
# Payment Integration (Razorpay)
# ============================================
# Get these from https://dashboard.razorpay.com/
# Leave empty if not testing payment features
RAZORPAY_KEY_ID=rzp_test_your_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# Security & Authentication
# ============================================
# JWT_SECRET: Generate with: openssl rand -hex 32
JWT_SECRET=generate_a_strong_random_secret_min_32_characters_here
JWT_EXPIRY=7d

# ENCRYPTION_KEY: Generate with: openssl rand -hex 32
# Must be exactly 64 hex characters (32 bytes)
ENCRYPTION_KEY=0123456789abcdef0123456789abcdef0123456789abcdef0123456789abcdef

# ============================================
# Application Configuration
# ============================================
NODE_ENV=development
FRONTEND_URL=http://localhost:5173

# Database (optional, Encore provides default)
DATABASE_URL=

# ============================================
# Subscription & Limits
# ============================================
FREE_TIER_QUERY_LIMIT=50

# ============================================
# Feature Flags
# ============================================
ENABLE_CSV_IMPORT=true
ENABLE_SOCIAL_FEATURES=true
